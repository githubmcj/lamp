<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:src="@drawable/start2" />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:autoLink="all"
        android:text="@string/next"
        android:padding="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:textColor="@color/app_blue"
        android:textSize="16sp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="Conneting to Delightlux Device"
        android:textColor="@color/app_blue"
        android:textSize="30sp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_10"
        android:text="Please place your mobile phone close to the Delightlux device.\nPress and hold the button for 5 sec and let go, the Status LED will turns to sparkling Orange."
        android:textColor="@color/c666666"
        android:textSize="14sp"></TextView>

</RelativeLayout>