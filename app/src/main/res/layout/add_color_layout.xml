<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_20"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/white_pick_view_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="Create a new color palette"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14">

        </TextView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_colors"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

        </android.support.v7.widget.RecyclerView>


        <com.wya.env.view.ColorPickerView
            android:id="@+id/picker2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:paddingTop="0dp"
            app:indicatorColor="#ffffff"
            app:indicatorEnable="true"
            app:orientation="horizontal" />

        <com.wya.env.view.ColorPickerView
            android:id="@+id/picker1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            app:indicatorColor="#ffffff"
            app:indicatorEnable="true"
            app:orientation="horizontal" />



        <RelativeLayout
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_280">

            <top.defaults.colorpicker.ColorPickerView
                android:id="@+id/picker_view"
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_280"
                app:enableAlpha="false"
                app:enableBrightness="false"
                app:indicatorColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.wya.uikit.button.WYAButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50"
                android:text="CANCEL"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:buttonBackGroundColor="@color/white"
                app:buttonBackGroundColorPress="@color/white"
                app:buttonFillet="true"
                app:buttonRadius="10dp"
                app:buttonTextColor="@color/app_blue" />

            <com.wya.uikit.button.WYAButton
                android:id="@+id/create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50"
                android:text="CREATE"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:buttonBackGroundColor="@color/white"
                app:buttonBackGroundColorPress="@color/white"
                app:buttonFillet="true"
                app:buttonRadius="10dp"
                app:buttonTextColor="@color/app_blue" />


        </TableRow>


    </LinearLayout>

</LinearLayout>