<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/white_r10_bg"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"></TextView>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/c999999"
                    android:textSize="@dimen/sp_16" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:background="@color/f5f5f5" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="Code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"></TextView>

                <EditText
                    android:id="@+id/code"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/code_hint"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/c999999"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/btn_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/get_code"
                    android:textSize="@dimen/sp_14"
                    android:background="@drawable/code_normal"
                    android:textColor="@color/white">
                </TextView>
            </TableRow>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/white_r10_bg"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"></TextView>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/pass_setting_hint"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/c999999"
                    android:textSize="@dimen/sp_16" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:background="@color/f5f5f5" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:text="@string/sure_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"></TextView>

                <EditText
                    android:id="@+id/sure_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/sure_password_hint"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/c999999"
                    android:textSize="@dimen/sp_16" />

            </TableRow>


        </LinearLayout>

        <com.wya.uikit.button.WYAButton
            android:id="@+id/but_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            android:text="@string/sure_forget"
            android:textSize="@dimen/sp_18"
            app:buttonBackGroundColor="@color/app_blue"
            app:buttonBackGroundColorPress="@color/app_blue"
            app:buttonFillet="true"
            app:buttonRadius="10dp"
            app:buttonTextColor="@color/white" />

    </LinearLayout>

</LinearLayout>